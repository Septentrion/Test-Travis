<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <route id="portfolio_homepage" path="/">
        <default key="_controller">PortfolioBundle:Default:index</default>
    </route>

    <route id="portfolio_galerie" path="/galerie/{id}">
        <default key="_controller">PortfolioBundle:Default:galerie</default>
    </route>

    <route id="portfolio_detail" path="/detail/{id}">
        <default key="_controller">PortfolioBundle:Default:detail</default>
    </route>

</routes>
